{
  "manifest_version": 3,
  "name": "Chat Clipper",
  "version": "0.1",
  "permissions": ["activeTab", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "icons": {
      "16": "./public/icon.png"
    }
  }
}
